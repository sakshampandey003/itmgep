<%-include('../layouts/header.ejs') %>

  <%-include('../layouts/sidebar.ejs') %>


    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

      <!-- Main content -->
      <div class="content">

        <!-- /.card -->

        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h3 class="card-title" style="line-height: 40px;"> Edit Student</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
        </div>
        <div class="modal-body">
         <form action="/admin/studentupdate/<%=d._id%>" method="post"  enctype="multipart/form-data" >
          <div class="form-group">
            <label>Name</label>
            <input type="text" value="<%= d.name %>" name="name" class="form-control" required>
          </div>

          <div class="form-group">
            <label>Email</label>
            <input type="text" value="<%= d.email %>" name="email" class="form-control" required>
          </div>

          <div class="form-group">
            <label>Password</label>
            <input readonly type="password"value="<%= d.password %>" name="password" class="form-control" required>
          </div>

          <div class="form-group">
            <label>Image</label>
            <input type="file"  name="image" class="form-control" required>
            <img src="<%= d.image.url %>" alt="" style="width: 50px; border-radius: 2px;">
          </div>
<!-- 
          <div class="form-group">
            <label>Phone no.</label>
            <input type="text" name="Phone" class="form-control">
          </div> -->
          <button class="btn btn-success" type="Submit">Submit</button>
         </form>
        </div>
              
          </div>
          <!-- /.card-body -->
        </div>
        <!--modal start-->
        <!--modal end -->

        <!-- /.card -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <%-include('../layouts/footer.ejs') %>